<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.habittracker.NewHabitActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habit Name:"
        android:id="@+id/tv_name"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/et_name"
        android:layout_alignStart="@+id/et_name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_name"
        android:layout_below="@+id/tv_name"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add new Habit"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:id="@+id/cb_mon"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/et_name"
        android:layout_alignStart="@+id/et_name"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday"
        android:id="@+id/cb_tue"
        android:checked="false"
        android:layout_below="@+id/cb_mon"
        android:layout_alignLeft="@+id/et_name"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:id="@+id/cb_wed"
        android:checked="false"
        android:layout_below="@+id/cb_tue"
        android:layout_alignLeft="@+id/et_name"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thursday"
        android:id="@+id/cb_thu"
        android:checked="false"
        android:layout_below="@+id/cb_wed"
        android:layout_alignLeft="@+id/et_name"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday"
        android:id="@+id/cb_fri"
        android:checked="false"
        android:layout_below="@+id/cb_thu"
        android:layout_alignLeft="@+id/et_name"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturday"
        android:id="@+id/cb_sat"
        android:checked="false"
        android:layout_below="@+id/cb_fri"
        android:layout_alignLeft="@+id/et_name"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday"
        android:id="@+id/cb_sun"
        android:checked="false"
        android:layout_below="@+id/cb_sat"
        android:layout_alignLeft="@+id/et_name"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:id="@+id/btn_cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/btn_save"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"/>

</RelativeLayout>
